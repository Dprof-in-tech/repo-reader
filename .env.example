# OpenAI API Configuration
# Required for AI-powered repository analysis and quiz generation
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional - for debugging and monitoring)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=your_project_name

# Local GPT OSS 20B Model Configuration (Optional - for local LLM)
# Option 1: Local downloaded model (requires ~40GB disk space)
# CHATGPT_OSS_MODEL_PATH=./models/gpt-oss-20b/
# Option 2: Direct from HuggingFace Hub (recommended - no download needed)
CHATGPT_OSS_MODEL_PATH=openai/gpt-oss-20b
LOCAL_MODEL_PREFER=true

# Local Model Performance Settings (Optional)
LOCAL_MODEL_GPU_LAYERS=35
LOCAL_MODEL_THREADS=8
LOCAL_MODEL_BATCH_SIZE=512
LOCAL_MODEL_CONTEXT_SIZE=4096